<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>@ViewBag.Title - piSensorNet</title>

    <link rel="shortcut icon" type="image/x-icon" href="~/favicon.ico" />

    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.3/css/bootstrap.min.css" />
    @RenderSection("Styles", false)

    <script src="~/lib/jquery/dist/jquery.min.js" type="text/javascript"></script>
    <script src="~/lib/noty/js/noty/jquery.noty.js" type="text/javascript"></script>
    <script src="~/lib/noty/js/noty/themes/default.js" type="text/javascript"></script>
    <script src="~/lib/noty/js/noty/layouts/topCenter.js" type="text/javascript"></script>
    <script src="~/lib/signalr/jquery.signalR.min.js" type="text/javascript"></script>
    <script src="~/scripts/common.js" type="text/javascript"></script>
    <script src="~/scripts/piSensorNet.js" type="text/javascript"></script>
    @* ReSharper disable Html.PathError *@
    <script src="~/signalr/hubs" type="text/javascript"></script>
    @* ReSharper enable Html.PathError *@

    <script type="text/javascript">
        piSensorNet.initHub($.connection);

        $(function () {
            piSensorNet.connectHub();
        });
    </script>

    @RenderSection("HeaderScripts", false)
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top" style="margin-bottom: 0;">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li><a href="/">Home</a></li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content" style="margin-top: 50px;">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - kiziu</p>
        </footer>
    </div>

    @RenderSection("BodyScripts", false)
</body>
</html>
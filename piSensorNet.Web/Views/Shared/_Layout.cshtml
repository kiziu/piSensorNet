@inherits CustomPageBase

<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>@ViewBag.Title - piSensorNet</title>

    <link rel="shortcut icon" type="image/x-icon" href="~/favicon.ico"/>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/lib/font-awesome/css/font-awesome.min.css"/>
    <link rel="stylesheet" href="~/lib/gentelella/build/css/custom.min.css"/>
    <link rel="stylesheet" href="~/lib/datatables/media/css/jquery.dataTables.min.css" />
    <link rel="stylesheet" href="~/lib/jquery-ui/themes/hot-sneaks/jquery-ui.min.css" />
    @RenderSection("Styles", false)
    <link rel="stylesheet" href="~/styles/piSensorNet.css"/>

    @RenderSection("HeaderScripts", false)
</head>
<body class="nav-md">
    <div class="container body">
        <div class="main_container">
            <div class="col-md-3 left_col">
                <div class="left_col scroll-view">
                    <div class="navbar nav_title" style="border: 0;">
                        <a href="@(Url.Action("Index", "Home"))" class="site_title"><i class="fa fa-bar-chart"></i> <span>piSensorNet</span></a>
                    </div>

                    <div class="clearfix"></div>

                    @*<div class="profile">
                        <div class="profile_info">
                            <h2>kiziu</h2>
                        </div>
                    </div>*@

                    <br/>

                    <div id="sidebar-menu" class="main_menu_side hidden-print main_menu">
                        <div class="menu_section">
                            <h3>General</h3>
                            <ul class="nav side-menu">
                                <li>
                                    <a href="@(Url.Action("Index", "Home"))"><i class="fa fa-home"></i> Home </a>
                                    <a href="@(Url.RouteUrl("actionOnly", new {controller = "Home"}))" class="althref"></a>
                                    <a href="@(Url.RouteUrl("full", new {controller = "Home", action = "Index"}))" class="althref"></a>
                                </li>
                                <li>
                                    <a><i class="fa fa-cogs"></i> Manage <span class="fa fa-chevron-down"></span></a>
                                    <ul class="nav child_menu">
                                        <li><a href="@(Url.Action("Index", "Modules", "Manage"))">Modules</a></li>
                                        <li><a href="@(Url.Action("Index", "Triggers", "Manage"))">Triggers</a></li>
                                    </ul>
                                </li>
                            </ul>
                        </div>
                    </div>
                    <div class="sidebar-footer hidden-small">
                        <a data-toggle="tooltip" data-placement="top" title="Settings">
                            <span class="glyphicon glyphicon-cog" aria-hidden="true"></span>
                        </a>
                        <a data-toggle="tooltip" data-placement="top" title="Logout">
                            <span class="glyphicon glyphicon-off" aria-hidden="true"></span>
                        </a>
                    </div>
                </div>
            </div>

            <div class="top_nav">
                <div class="nav_menu">
                    <nav role="navigation">
                        <div class="nav toggle">
                            <a id="menu_toggle"><i class="fa fa-bars"></i></a>
                        </div>

                        @*<ul class="nav navbar-nav navbar-right">
                            <li class="">
                                <a href="javascript:;" class="user-profile dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
                                    John Doe
                                    <span class=" fa fa-angle-down"></span>
                                </a>
                                <ul class="dropdown-menu dropdown-usermenu pull-right">
                                    <li><a href="javascript:;"> Profile</a></li>
                                    <li>
                                        <a href="javascript:;">
                                            <span class="badge bg-red pull-right">50%</span>
                                            <span>Settings</span>
                                        </a>
                                    </li>
                                    <li><a href="javascript:;">Help</a></li>
                                    <li><a href="@(Url.Action("Index", "Home"))"><i class="fa fa-sign-out pull-right"></i> Log Out</a></li>
                                </ul>
                            </li>
                        </ul>*@
                    </nav>
                </div>
            </div>

            <div class="right_col" role="main">
                @RenderBody()
            </div>
        </div>
    </div>

    <script src="~/scripts/common.js" type="text/javascript"></script>
    <script src="~/scripts/prototypes.js" type="text/javascript"></script>
    <script src="~/lib/jquery/dist/jquery.min.js" type="text/javascript"></script>
    <script src="~/lib/jquery-ui/jquery-ui.min.js" type="text/javascript"></script>
    <script src="~/scripts/jquery.extensions.js" type="text/javascript"></script>
    <script src="~/scripts/common.jquery.js" type="text/javascript"></script>
    <script src="~/lib/moment/min/moment.min.js" type="text/javascript"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js" type="text/javascript"></script>
    <script src="~/lib/noty/js/noty/jquery.noty.js" type="text/javascript"></script>
    <script src="~/lib/noty/js/noty/themes/default.js" type="text/javascript"></script>
    <script src="~/lib/noty/js/noty/layouts/topCenter.js" type="text/javascript"></script>
    <script src="~/lib/signalr/jquery.signalR.min.js" type="text/javascript"></script>
    <script src="~/lib/gentelella/build/js/custom.min.js" type="text/javascript"></script>
    <script src="~/lib/datatables/media/js/jquery.dataTables.js"></script>
    <script src="~/lib/datatables/media/js/dataTables.jqueryui.min.js"></script>
    <script src="~/scripts/loading.js" type="text/javascript"></script>
    <script src="~/scripts/configuration.js" type="text/javascript"></script>
    <script src="~/scripts/piSensorNet.js" type="text/javascript"></script>
    <script src="~/scripts/piSensorNet.Net.js" type="text/javascript"></script>
    <script src="~/scripts/piSensorNet.Resources.js" type="text/javascript"></script>
    <script src="~/scripts/piSensorNet.DataTables.js" type="text/javascript"></script>
    <script src="~/scripts/piSensorNet.Dialog.js" type="text/javascript"></script>
    <script src="~/scripts/datatables.plugins.js"></script>
    <script src="~/scripts/datatables.events.js"></script>
    @* ReSharper disable Html.PathError *@
    <script src="~/signalr/hubs" type="text/javascript"></script>
    @* ReSharper enable Html.PathError *@
    <script type="text/javascript">
        $.extend($.fn.dataTable.defaults.oLanguage,
        {
            'sProcessing': $('<div />').addClass('spinner'),
            'sRefresh': '@(Views.DataTables_Button_Refresh_Link)'
        });

        piSensorNet.Net.initHub($.connection);

        $(function() {
            piSensorNet.Net.connectHub();
        });

        @(RenderResources("piSensorNet.Resources.Manual", 2))
    </script>
    @RenderSection("Scripts", false)

    <div id="dialog" style="display: none;">
    </div>
</body>
</html>